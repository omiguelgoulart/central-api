generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Papel {
  ADMIN
  TORCEDOR
}

enum StatusSocio {
  ATIVO
  INADIMPLENTE
  CANCELADO
}

enum StatusPagamento {
  PENDENTE
  PAGO
  ATRASADO
  CANCELADO
}

enum StatusIngresso {
  VALIDO
  USADO
  CANCELADO
}

enum Periodicidade {
  MENSAL
  TRIMESTRAL
  SEMESTRAL
  ANUAL
}

enum MetodoPagamento {
  BOLETO
  CARTAO_CREDITO
  CARTAO_DEBITO
  DINHEIRO
  PIX
}



model Usuario {
  id         String   @id @default(uuid())
  nome       String
  email      String    @unique
  senha      String
  papel      Papel     @default(TORCEDOR)
  matricula  String?   @unique

  criadoEm   DateTime  @default(now())
  atualizadoEm DateTime @updatedAt

  torcedor   Torcedor?
  @@map("usuarios")
}

model Torcedor {
  id         String   @id @default(uuid())
  usuarioId   String       @unique
  nome        String
  cpf         String       @unique
  dataNasc    DateTime?
  endereco    String?
  telefone    String?
  status      StatusSocio  @default(ATIVO)

  planoId     String?
  plano       Plano?       @relation(fields: [planoId], references: [id])

  usuario     Usuario      @relation(fields: [usuarioId], references: [id])
  pagamentos  Pagamento[]
  ingressos   Ingresso[]

  criadoEm    DateTime     @default(now())
  atualizadoEm DateTime    @updatedAt

  @@index([status])
  @@index([planoId])
  @@map("torcedores")
}


model Plano {
  id         String   @id @default(uuid())
  nome        String
  descricao   String?
  valor       Float     
  periodicidade Periodicidade   
  beneficios  String?

  socios      Torcedor[]

  criadoEm    DateTime    @default(now())
  atualizadoEm DateTime   @updatedAt

  @@unique([nome])
  @@map("planos")
}


model Pagamento {
  id         String   @id @default(uuid())
  socioId     String
  valor       Float         
  status      StatusPagamento   @default(PENDENTE)
  dataVencimento  DateTime
  pagoEm      DateTime?
  referencia  String?
  metodo      MetodoPagamento       

  socio       Torcedor          @relation(fields: [socioId], references: [id])

  criadoEm    DateTime          @default(now())
  atualizadoEm DateTime         @updatedAt

  @@index([socioId])
  @@index([status, dataVencimento])
  @@map("pagamentos")
}

model Jogo {
  id         String   @id @default(uuid())
  nome        String
  data        DateTime
  local       String
  descricao   String?

  ingressos   Ingresso[]

  criadoEm    DateTime   @default(now())
  atualizadoEm DateTime  @updatedAt

  @@index([data])
  @@map("jogos")
}

model Ingresso {
  id         String   @id @default(uuid())
  socioId     String?
  eventoId    String
  qrCode      String          @unique
  valor       Float
  status      StatusIngresso  @default(VALIDO)
  criadoEm    DateTime        @default(now())
  usadoEm     DateTime?

  socio       Torcedor?       @relation(fields: [socioId], references: [id])
  evento      Jogo          @relation(fields: [eventoId], references: [id])

  @@index([eventoId, status])
  @@map("ingressos")
}
